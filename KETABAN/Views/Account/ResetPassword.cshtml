@model KETABAN.CORE.DTOs.ResetPasswordDTO
@{
    Layout = null;
}

<div class="Forgot_password_form-container">
    <div class="logo-container">
        تغییر کلمه عبور
    </div>

    <form class="form" asp-controller="Account" asp-action="ResetPassword" method="post">

        @if (ViewBag.ResetPasswordStatus == "SuccessFully")
        {
            <script>SuccessAlert ("کلمه عبور شما با موفقیت تغییر کرد ",'/Login')</script>
        }


        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Token" />

        <div class="form-group">
            <label for="email">رمزعبور</label>
            <input asp-for="Password"  type="password"  placeholder="رمز عبور جدید را وارد کنید" >
        </div>
        <div class="form-group">
            <label for="email">تایید رمز عبور</label>
            <input asp-for="ComfirmPassword" type="password" placeholder="رمز عیور جدید را مجددا وارد کنید">
        </div>

        <button class="form-submit-btn" type="submit">تغییر کلمه عبور</button>

        <span style="color:red;"> @ViewData["Errors"] </span>
    </form>


</div>