
@{
    ViewData["Title"] = "Categories";
}
 @using KETEBAN.DATA.Entities.BookEN


@if (TempData["CreateStatus"] is "Successfully")
{
    <script>SuccessAlert("دسته بندی جدید با موفقیت اضافه شد", '/Settings/Categories')</script>
}

@if (TempData["DeleteStatus"] is "Successfully")
{
    <script>SuccessAlert("دسته بندی  با موفقیت حذف شد", '/Settings/Categories')</script>

}
<div class="main-content padding-0 categories">

    <div class="row no-gutters  ">
        <div class="col-8 margin-left-10 margin-bottom-15 border-radius-3">
            <p class="box__title">دسته بندی ها</p>
            <div class="table__box">
                <table class="table">
                    <thead role="rowgroup">
                        <tr role="row" class="title-row">
                            <th>شناسه</th>
                            <th>نام دسته بندی</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewData["Categories"] as List<Categories>)
                        {
                            <tr role="row" class="">
                                <td><a href="">@item.Id</a></td>
                                <td><a href="">@item.Genre</a></td>
                                <td>
                                    <a asp-controller="Settings" asp-action="DeleteCategory" asp-route-CategoryId="@item.Id" class="item-delete mlg-15" title="حذف"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        

        </div>
        <div class="col-4 bg-white">
            <p class="box__title">ایجاد دسته بندی جدید</p>
            <form asp-controller="Settings" asp-action="CreateCategory" method="post" class="padding-30">
                <input name="Genre" type="text" placeholder="نام دسته بندی" class="text">
                <button type="submit" class="btn btn-netcopy_net">اضافه کردن</button>

               
            </form>

            <span style="color:red;">
                @TempData["Errors"]
            </span>
        </div>
    </div>
</div>

