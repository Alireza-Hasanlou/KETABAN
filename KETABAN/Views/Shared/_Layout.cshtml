<html lang="en">

<head>
    <partial name="_Styles">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0;">
    <title>کتابان</title>
    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
 
</head>
<body>
    <div class="sidebar__nav border-top border-left  ">
        <span class="bars d-none padding-0-18"></span>

        <div class="profile__info border cursor-pointer text-center">
            <div class="avatar__img">
                <img src="/img/Avatars/@User.FindFirst("AvatarName")?.Value" class="avatar___img">
              
                <div class="v-dialog__container" style="display: block;"></div>
                <div class="box__camera default__avatar"></div>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                
                <h3>@User.Identity.Name</h3>
            }
        </div>

        <ul>
            <li class="item-li i-dashboard is-active"><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
            <li class="item-li i-users "><a asp-controller="librarian" asp-action="Index" title="کتابداران"> کتابداران</a></li>
            <li class="item-li  "><a class="item-Plus" asp-controller="librarian" asp-action="Create" title="افزودن کتابدار"> افزودن کتابدار</a></li>
            <li class="item-li i-users"><a asp-controller="Student" asp-action="Index" title="دانشجویان">  دانشجویان</a></li>
            <li class="item-li  "><a class="item-Plus" asp-controller="Student" asp-action="Create" title="افزودن دانشجو"> افزودن دانشجو</a></li>
            <li class="item-li i-Books"><a asp-controller="Book" asp-action="Index" title="کتاب ها">کتاب ها</a></li>
            <li class="item-li  "><a class="item-Plus" asp-controller="Book" asp-action="Create" title="افزودن کتاب">افزودن کتاب</a></li>
            <li class="item-li i-slideshow"><a asp-controller="Loan" asp-action="Index" title="امانت ها"> امانت ها</a></li>
            <li class="item-li  "><a class="item-Plus" asp-controller="Loan" asp-action="Borrow" title="امانت جدید"> امانت جدید</a></li>
            <li class="item-li i-categories"><a asp-controller="Settings" asp-action="Categories" title="دسته بندی ها">دسته بندی ها</a></li>
            <li class="item-li i-tickets"><a asp-controller="Settings" asp-action="Languages" title=" زیان های کتاب"> زیان های کتاب</a></li>
            <li class="item-li i-user__inforamtion"><a asp-controller="Account" asp-action="EditProfile" title="اطلاعات کاربری">ویرایش اطلاعات کاربری</a></li>
            <li class="item-li "><a class="logout" asp-controller="Account" asp-action="Logout" title="خروج">خروج</a></li>


        </ul>

    </div>
    <div class="content">
        <div class="header d-flex item-center bg-white width-100 border-bottom padding-12-30">
            <div class="header__right d-flex flex-grow-1 item-center">
              

            </div>

        </div>
       @*  <div class="breadcrumb">
            <ul>
                <li><a href="index.html" title="پیشخوان">پیشخوان</a></li>
            </ul>
        </div> *@
        @RenderBody()
    </div>

</body>
</html>
